---
import { getEntry } from 'astro:content'
import Container from './Container.astro'

const kyleShevlinEntry = await getEntry({
  collection: 'team',
  slug: 'kyle-shevlin',
})
const avatarUrl = kyleShevlinEntry.data.imgUrl
---

<Container>
  <div class="flex flex-col items-center gap-4 lg:items-start lg:gap-12">
    <div class="flex flex-col items-center lg:items-start">
      <h1
        class="inline-block animate-backAndForth bg-gradient-to-r from-rose-500 via-pink-500 to-orange-400 bg-[length:300%] bg-clip-text text-6xl font-bold leading-tight text-transparent sm:text-8xl sm:leading-tight lg:text-[14rem]"
      >
        Agathist
      </h1>

      <p class="text-center font-serif text-lg lg:text-left lg:text-3xl">
        Good software by good&nbsp;people
      </p>
    </div>

    <a
      class="rounded-full bg-rose-400 px-4 py-2 text-white transition-colors duration-300 hover:bg-pink-500 active:-translate-y-[1px] lg:px-8 lg:py-4 lg:text-2xl"
      href="/services"
    >
      See how we can help &rarr;
    </a>

    <div class="mt-4 flex items-center gap-2 lg:gap-4">
      <p class="italic text-slate-300 lg:text-xl">Founded by Kyle Shevlin</p>
      {
        avatarUrl && (
          <div class="h-8 w-8 overflow-hidden rounded-full lg:h-10 lg:w-10">
            <img src={avatarUrl} />
          </div>
        )
      }
    </div>
  </div>
</Container>
