---
interface Props {
  href: string
}

const { href } = Astro.props
const external = href.startsWith('http')
const additionalProps: Partial<Pick<HTMLAnchorElement, 'rel' | 'target'>> = {}

if (external) {
  additionalProps.rel = 'noopener noreferrer'
  additionalProps.target = '_blank'
}
---

<a
  class="border-b-2 border-b-cyan-500 hover:bg-cyan-500"
  href={href}
  {...additionalProps}><slot /></a
>
